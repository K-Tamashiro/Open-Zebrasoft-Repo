<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/list_back"
  	android:textColor="#FF0000" 
  	android:layout_height="wrap_content" 
  	android:baselineAligned="true" 
  	android:layout_width="fill_parent" 
  	android:layout_weight="1" 
  	android:orientation="vertical" 	
  	android:configChanges="orientation|keyboardHidden"
  	>
      	<LinearLayout
 		android:layout_width="wrap_content"
  		android:layout_height="wrap_content" 
  		android:orientation="horizontal">
  		<ImageView 
	  		android:layout_height="45dip" 
  			android:layout_width="45dip" 
  			android:src="@drawable/icon" 
	  		android:id="@+id/image" 
	  		android:padding="5px"
	  		/>
	  	<TextView
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:id="@+id/name"
	  		android:textStyle="bold"
			android:textSize="28px"
			android:textColor="#AA0000FF"
			android:text="title" 
			/>
  	</LinearLayout>
  	<LinearLayout 
	  	android:layout_height="wrap_content" 
	  	android:layout_width="fill_parent" 
	  	android:id="@+id/linearLayout1"
		android:background="@drawable/list_back_s"
 android:layout_marginRight="10dip" android:layout_marginLeft="10dip" android:layout_marginBottom="5dip"		>
  	<TextView
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:id="@+id/type"
		android:text="title" 
  		android:textStyle="italic"
		android:textColor="#FF0000AA"
		/>
  	<TextView
  		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
  		android:id="@+id/vTime"
  		android:textStyle="italic"
		android:textColor="#FF0000AA" 
		/>
  	</LinearLayout>
</LinearLayout>
